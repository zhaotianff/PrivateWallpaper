<tianxia:BlurWindow x:Class="PrivateWallpaper.Views.WallpaperModeSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tianxia="clr-namespace:TianXiaTech"
        mc:Ignorable="d"
        Title="请选择系统模式" Icon="../logo.jpg" Height="200" Width="300" WindowStartupLocation="CenterScreen" ControlBoxVisibility="Collapsed" Closing="BlurWindow_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Content="休闲模式" Width="130" Height="130" FontSize="15" Name="btn_PrivateWallpaperMode" Click="btn_PrivateWallpaperMode_Click"></Button>
        <Button Content="工作模式" Width="130" Height="130" FontSize="15" Grid.Column="1" Name="btn_PublicWallpaperMode" Click="btn_PublicWallpaperMode_Click"></Button>
    </Grid>
</tianxia:BlurWindow>